# BEGIN WordPress
<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /
  RewriteRule ^index\.php$ - [L]
  # add a trailing slash to /wp-admin
  RewriteRule ^([_0-9a-zA-Z-]+/)?wp-admin$ $1wp-admin/ [R=301,L]
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]
  RewriteRule ^([_0-9a-zA-Z-]+/)?(wp-(content|admin|includes).*) $2 [L]
  RewriteRule ^([_0-9a-zA-Z-]+/)?(.*\.php)$ $2 [L]
  RewriteRule . index.php [L]
</IfModule>

<IfModule mod_headers.c>
  Header always set X-Content-Type-Options "nosniff"
  <FilesMatch "\.(html|php)$">
    Header set Cache-Control "no-cache"
    Header set Content-Security-Policy "default-src 'self' https://*.northwestern.edu https://www.facebook.com https://apply-soc-northwestern-edu.cdn.technolutions.net; script-src 'self' 'unsafe-inline' 'unsafe-eval' blob: https://*.northwestern.edu https://bat.bing.com https://cdnjs.cloudflare.com https://static.ctctcdn.com https://googleads.g.doubleclick.net https://connect.facebook.net https://www.google.com https://*.google-analytics.com https://*.googleadservices.com https://*.googletagmanager.com https://*.gstatic.com https://snap.licdn.com https://www.recaptcha.net https://*.smugmug.com https://*.technolutions.net https://static.ads-twitter.com https://analytics.twitter.com https://www.wufoo.com https://player.vimeo.com; style-src 'self' 'unsafe-inline' https://*.northwestern.edu https://static.ctctcdn.com https://fonts.googleapis.com https://*.cdn.technolutions.net; img-src 'self' data: https://*.northwestern.edu https://p.adsymptotic.com https://bat.bing.com https://stats.g.doubleclick.net https://www.facebook.com https://www.google.com https://*.google-analytics.com https://secure.gravatar.com https://px.ads.linkedin.com https://t.co https://ps.w.org https://i.ytimg.com; font-src 'self' data: https://*.northwestern.edu https://fonts.gstatic.com; media-src 'self' https://*.northwestern.edu https://*.soundcloud.com https://*.vimeo.com https://www.youtube.com; frame-src 'self' https://*.northwestern.edu https://*.doubleclick.net https://library.elementor.com https://www.facebook.com https://*.google.com https://*.smugmug.com https://*.soundcloud.com https://*.vimeo.com https://www.youtube.com; connect-src 'self' https://*.northwestern.edu https://*.constantcontact.com https://listgrowth.ctctcdn.com https://www.facebook.com https://apply-soc-northwestern-edu.cdn.technolutions.net"
    Header set Feature-Policy "camera 'none'; geolocation 'none'; microphone 'none'"
    Header set Referrer-Policy "strict-origin"
    Header set X-Frame-Options "SAMEORIGIN"
  </FilesMatch>
  <FilesMatch "\.(css|js)$">
    Header set Cache-Control "public, max-age=2592000"
  </FilesMatch>
  <FilesMatch "\.(xml|txt)$">
    Header set Cache-Control "public, max-age=2592000, must-revalidate"
  </FilesMatch>
  <FilesMatch "\.(eot|flv|gif|ico|jpeg|jpg|mov|mpeg|mp3|mp4|otf|pdf|png|svg|svg+xml|swf|ttf|wav|woff|woff2)$">
    Header set Cache-Control "public, max-age=31536000"
  </FilesMatch>
</IfModule>

php_value max_execution_time 60
php_value max_input_time 600
php_value memory_limit 256M
php_value post_max_size 64M
php_value upload_max_filesize 64M

# END WordPress
